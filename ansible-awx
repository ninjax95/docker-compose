version: '3'

services:
  awx_web:
    image: ansible/awx:19.2.2
    ports:
      - "8052:8052"
    environment:
      AWX_SECRET_KEY: awxsecret
      DATABASE_USER: awx
      DATABASE_PASSWORD: awxpass
      DATABASE_NAME: awx
      DATABASE_PORT: 5432
      DATABASE_HOST: awx_postgres
    depends_on:
      - awx_postgres
    networks:
      - my_lanhome

  awx_task:
    image: ansible/awx:19.2.2
    environment:
      AWX_SECRET_KEY: awxsecret
      DATABASE_USER: awx
      DATABASE_PASSWORD: awxpass
      DATABASE_NAME: awx
      DATABASE_PORT: 5432
      DATABASE_HOST: awx_postgres
    depends_on:
      - awx_postgres
    networks:
      - my_lanhome

  awx_postgres:
    image: postgres:12
    environment:
      POSTGRES_USER: awx
      POSTGRES_PASSWORD: awxpass
      POSTGRES_DB: awx
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - my_lanhome

volumes:
  postgres_data:

networks:
  my_lanhome:
    external: true
