version: '3.7'

services:
  awx_web:
    image: ansible/awx:19.2.2
    ports:
      - "8052:8052"
    environment:
      DATABASE_HOST: awx_postgres
      DATABASE_PASSWORD: awxpass
      DATABASE_NAME: awx
      DATABASE_USER: awx
      DATABASE_PORT: "5432"
      SECRET_KEY: awxsecret
    networks:
      - my_lanhome

  awx_task:
    image: ansible/awx:19.2.2
    environment:
      DATABASE_HOST: awx_postgres
      DATABASE_PASSWORD: awxpass
      DATABASE_NAME: awx
      DATABASE_USER: awx
      DATABASE_PORT: "5432"
      SECRET_KEY: awxsecret
    networks:
      - my_lanhome

  awx_postgres:
    image: postgres:12
    environment:
      POSTGRES_USER: awx
      POSTGRES_PASSWORD: awxpass
      POSTGRES_DB: awx
    networks:
      - my_lanhome

  ansible:
    image: cytopia/ansible:latest
    container_name: ansible_interactive
    volumes:
      - ./ansible:/ansible
      - ~/.ssh:/root/.ssh:ro
    working_dir: /ansible
    tty: true
    stdin_open: true
    environment:
      ANSIBLE_HOST_KEY_CHECKING: "False"
    networks:
      - my_lanhome

volumes:
  postgres_data:

networks:
  my_lanhome:
    external: true
